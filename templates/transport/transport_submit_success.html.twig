{% block content %}
    <div id="main-content">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="header">
            <h1>{{ 'general.thank-you-transport-submit' | trans }}</h1>
        </div>

        <div class="card">
            <div class="card-title"><h3>{{ 'general.transport-details' | trans }}</h3></div>
            <div class="card-body">
                <div class="item">
                    <strong>
                        {{ 'general.from' | trans }}
                    </strong>
                    {{ transport.from }}
                </div>

                <div class="item">
                    <strong>
                        {{ 'general.to' | trans }}
                    </strong>
                    {{ transport.to }}
                </div>

                <div class="item">
                    <strong>
                        {{ 'general.airplane.name' | trans }}
                    </strong>
                    {{ transport.airplane.name }}
                </div>

                <div class="item">
                    <strong>
                        {{ 'general.transportDate' | trans }}
                    </strong>
                    {{ transport.date.toDateString }}
                </div>

                <div class="item">
                    <strong>
                        {{ 'general.cargoes' | trans }}
                    </strong>
                    <table>
                        <tr>
                            <th>Name</th>
                            <th>Weight</th>
                            <th>Type</th>
                        </tr>
                        {% for cargo in cargoes %}
                            <tr>
                                <td>{{ cargo.name }}</td>
                                <td>{{ cargo.weight }}</td>
                                <td>{{ cargo.cargoType }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>

            </div>
        </div>
    </div>

{% endblock %}